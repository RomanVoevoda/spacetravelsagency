{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "noImplicitAny": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  
  "include": [
    "src",
    "global.d.ts"  
  ],

  "exclude": [
    "node_modules"
  ]
}
